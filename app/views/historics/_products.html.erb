<section class="pull-left">
	<h2>Products historic</h2>
	<% if @products.length > 0 %>
		<table>
			<thead>
				<tr>
					<th>Product ID</th><th>Name</th><th>Price</th><th>Profit</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do |p| %>
				<tr>
					<td><%= p.product_id %></td><td><%= Product.exists?(p.product_id) ? link_to(p.name,"products/"+p.product_id.to_s) : p.name %></td><td><%= p.u_price %> €</td><td><%= p.profit %> €</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	<% else %>
		<p>There is no product in the database</p>
	<% end %>
</section>