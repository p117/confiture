<h1>Customers list</h1>
<ul>
	<% @customers.each do |customer| %>
	<li>
		<p><strong><%= customer.name %></strong> - <%= customer.created_at %> | <%= link_to 'Show', customer %> | <%= link_to 'Edit', edit_customer_path(customer) %> | <%= link_to 'Delete', customer_url(:id => customer.id), method: :delete, data: { confirm: 'Are you sure?' } %>
		</p> 
	</li>
	<% end %>
</ul>

<%= link_to "New", new_customer_url() %>