<h1>Orders list</h1>
<table>
	<thead>
		<th>Customer</th>
		<th>Global price</th>
		<th>Show</th>
		<th>Edit</th>
		<th>Delete</th>
	</thead>
	<tbody>
	<% @orders.each do  |order| %>
	<tr>
		<td><%= order.customer_id %></td>
		<td><%= order.global_price %></td>
		<td><%= link_to 'Show', order %></td>
		<td><%= link_to 'Edit', edit_order_path(order) %></td>
		<td><%= link_to 'Delete', order_url(:id => order.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
	</tbody>
</table>

<%= link_to "New order", new_order_url() %>